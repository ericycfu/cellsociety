<?xml version = "1.0"?>

<simulation>
	<basicinfo>
		<simulationName>Segregation</simulationName>
		<simulationTitle>Our Amazing Game</simulationTitle>
		<simulationAuthor>Eric Fu, Frank Yin, Jing Yang</simulationAuthor>
	</basicinfo>
	<globalsettings>
		<propertystring>X,O,Unoccupied</propertystring>
		<colors>#FF0000,#0000FF,#FFFFFF</colors>
		<cellshape>hexagon</cellshape>
		<useprobability>1</useprobability>
	</globalsettings>
	<gridparameter></gridparameter>
	<cellparameter></cellparameter>
	<calculatorparameter>
		<satisfylevel>0.6</satisfylevel>
	</calculatorparameter>
	<gridconfig>
		<gridheight>19</gridheight>
		<gridwidth>19</gridwidth>
	</gridconfig>
	<percentages>
		<xpercentage>0.3</xpercentage>
		<opercentage>0.3</opercentage>
		<unoccupiedpercentage>0.4</unoccupiedpercentage>
